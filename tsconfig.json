{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["ES2020"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": ".",
      "declaration": true,
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "baseUrl": "."
    },
    "include": ["src/**/*", "tools/**/*"],
    "exclude": ["node_modules", "dist"]
  }